! Minimal output fixture for sfincs_jax `sfincsOutput.h5` parity (geometryScheme=2, simplified LHD model).

&general
  solveSystem = .false.
  saveMatricesAndVectorsInBinary = .false.
  RHSMode = 2  ! ion transport matrix mode (output should preserve this setting)
/

&geometryParameters
  geometryScheme = 2
/

&speciesParameters
  Zs = 1
  mHats = 1.0d+0
  nHats = 1.0d+0
  THats = 1.0d+0
/

&physicsParameters
  Delta = 4.5694d-3
  alpha = 1.0d+0
  nu_n = 0.2668018d+0
  Er = 0.0d+0

  collisionOperator = 0
  includeXDotTerm = .true.
  includeElectricFieldTermInXiDot = .true.
  useDKESExBDrift = .false.
  includePhi1 = .false.
/

&resolutionParameters
  Ntheta = 9
  Nzeta = 9
  Nxi = 8
  NL = 3
  Nx = 4
  solverTolerance = 1d-8
/

&otherNumericalParameters
  Nxi_for_x_option = 0
  xGridScheme = 5
  xDotDerivativeScheme = 0
/

&preconditionerOptions
/

&export_f
  export_full_f = .false.
  export_delta_f = .false.
/

